{{ set_locale(lang) }}
<!DOCTYPE html>
<html
{% if comment_system == 'facebook' %}
xmlns:fb="http://ogp.me/ns/fb#"
{% endif %}
lang="{{ lang }}">
<head>
    {{ base.html_head() }}
    {% block extra_head %}
    {% endblock %}
    {{ extra_head_data }}
</head>
<body>

{% include 'header.tmpl' %}

<main>

    {% block belowtitle %}
    {% endblock %}
    {% block content %}{% endblock %}

</main>

{% include 'footer.tmpl' %}

